<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitSzewczyk.MainPage">

    <StackLayout Orientation="Vertical">
        <Label Text="Zaloguj się"/>
        <Label Text="Login:"/>
        <Entry x:Name="LoginTxT"/>
        <Label Text="Hasło"/>
        <Entry x:Name="PasswordTxT"
               IsPassword="True"/>
        <Label x:Name="Error"/>
        <Button Clicked="Login"/>
        <Button Clicked="Register"/>
    </StackLayout>

</ContentPage>
